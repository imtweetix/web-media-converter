{
  "name": "web-media-converter",
  "private": true,
  "version": "2.2.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "npm run type-check && vite build",
    "build:netlify": "npm ci --legacy-peer-deps && npm run build",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "build:profile": "vite build --mode production --profile",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "perf:audit": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:test": "npm run build && npm run preview & sleep 5 && npm run perf:audit && pkill -f 'vite preview'"
  },
  "dependencies": {
    "@awesome.me/kit-26a4d59a75": "^1.0.25",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "vite": "^6.2.4"
  }
}
